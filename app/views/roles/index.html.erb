
  <h1>Asignacion de Roles</h1>

     <%# <%= f.select :roles,options_from_collection_for_select(Role.all,"name","name") %>
  <p>Seleccione el Ususario y luego el rol que tendra el usuario</p>
  <div class="field">

  <form action="<%= roles_assignrole_path %>" method="POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label> Usuario: </label>
    <br/>
    <select id="user" name="user">
      <% @user.each do |u| %>
        <option value="<%= u.id%>"><%= u.name%></option>
      <% end %>
    </select>
  </div>

  <div class="field">
    <label> Rol: </label>
    <br/>
    <select id="role" name="role">
      <% @role.each do |r| %>
        <option value="<%= r.id%>"><%= r.name%></option>
      <% end %>
    </select>

  </div>

  <div class="form-actions">
    <%= submit_tag(value = "Submit") %>
  </div>
</form>

