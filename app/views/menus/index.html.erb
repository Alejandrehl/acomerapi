<div class="container table-responsive pt-5 pb-5">
<div class="text-center mb-5">
  <h2>Mis Cartas</h2>
  <%= link_to 'Nueva Carta'.html_safe, new_menu_path, class: "btn acomer-primary" %>
</div>
  <p id="notice"><%= notice %></p>
  <% if @menus.count == 0 %>
    <div>
      <div class="card alert alert-warning text-center">
        <h4>
          Aún no has agregado cartas para tus sucursales.
        </h4>
      </div>
    </div>
  <% else %>
  <table id="datatable-1" class="table table-datatable table-striped table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Sucursal</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @menus.each do |menu| %>
        <tr>
          <td><%= menu.name %></td>
          <td><%= menu.description %></td>
          <% @branch = Branch.find(menu.branch_id) %>
          <td><%= @branch.name %></td>
           <td>
            <%= link_to '<i class="batch-icon batch-icon-compose-alt-3"></i>'.html_safe, edit_menu_path(menu), class: "btn acomer-btn-primary-outline mb-2" %>
            <%= link_to '<i class="batch-icon batch-icon-bin-alt-2"></i>'.html_safe, menu, method: :delete, data: { confirm: '¿Estás seguro?' }, class: "btn acomer-btn-tertiary mb-2" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>
<% end %>
