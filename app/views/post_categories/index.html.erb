<div class="container table-responsive pt-5 pb-5">
  <div class="text-left mb-5">
    <h1>Post Category</h1>
    <%= link_to '<i class="batch-icon batch-icon-plus mr-3"></i>Nueva Categoria de Post'.html_safe, new_post_category_path, class: "btn acomer-primary" %>
  </div>
  <% if @post_categories.count == 0 %>
  <div> 
    <div class="card card-warning text-center">
      <h4 class="tex-center">
        Aún no has agregado ningúna Categoria de Post en tu lista.
      </h4>
    </div>
  </div>
<% else %>
  <table id="datatable-1" class="table table-datatable table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @post_categories.each do |post_category| %>
      <tr>
        <td><%= post_category.name %></td>
        <td>
            <%= link_to '<i class="batch-icon batch-icon-eye"></i><br>'.html_safe, post_category, class: "btn btn-sm btn-outline-primary mb-2" %>
            <%= link_to '<i class="batch-icon batch-icon-compose-alt-3"></i>'.html_safe, edit_post_category_path(post_category), class: "btn btn-sm acomer-btn-primary-outline mb-2" %>
            <%= link_to '<i class="batch-icon batch-icon-bin-alt-2"></i>'.html_safe, post_category, method: :delete, data: { confirm: '¿Estás seguro?' }, class: "btn btn-sm acomer-btn-tertiary mb-2" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
  <br>
</div>
<% end %>
